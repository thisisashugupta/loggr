<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <form action="/getUser">
      <input
        type="text"
        name="username"
        id="username"
        placeholder="username"
        required
      />
      <input type="text" name="email" id="email" placeholder="email" required />
      <input
        type="text"
        name="password"
        id="password"
        placeholder="password"
        required
      />
      <input
        type="text"
        name="nameFirst"
        id="nameFirst"
        placeholder="first name"
        required
      />
      <input
        type="text"
        name="nameLast"
        id="nameLast"
        placeholder="last name"
        required
      />
      <input
        type="text"
        name="dateOfBirth"
        id="dateOfBirth"
        placeholder="date of birth"
        required
      />
      <button
        type="submit"
        name="createuserBtn"
        id="createuserBtn"
        onclick="createUser()"
      >
        Submit Details
      </button>

      <script src="../server/index.js"></script>
    </form>
  </body>
</html>
